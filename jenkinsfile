// Jenkinsfile
pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Arief-177043/CICD-PROJECT-HOTEL-BOOKING'
            }
        }
        stage('Build Backend') {
            steps {
                dir('backend') {
                    sh './mvnw clean package'
                }
            }
        }
        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        // Add more stages for Docker build, test, deploy, etc.
    }
}
